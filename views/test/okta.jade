extends ../layout

block head 
	title www.digby.net
	
	meta(name='Content-Type', content='text/html; charset=UTF-8')
	meta(name='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	
	link(href="https://sophosqa.okta.com/js/sdk/okta-sign-in-1.0.2.min.css",type="text/css",rel="stylesheet")
	//link(href="https://sophosqa.okta.com/js/sdk/okta-theme-1.0.2.css",type="text/css",rel="stylesheet")
	script(src="https://sophosqa.okta.com/js/sdk/okta-sign-in-1.0.2.min.js",type="text/javascript")
	
	link(rel='shortcut icon', href='/images/favicon.png', sizes="196x196", type='image/x-icon')
	link(rel='shortcut icon', href='/images/favicon.png', sizes="128x128", type='image/x-icon')
	link(rel='apple-touch-icon', href='/images/favicon.png', sizes="128x128", type='image/x-icon')
	link(rel='apple-touch-icon-precomposed', href='/images/favicon.png', sizes="128x128", type='image/x-icon')

block append script

block content
	section#main
		div#okta-login-container
		script(type="text/javascript").
			var baseUrl = 'https://sophosqa.okta.com';
			var oktaSignIn = new OktaSignIn({baseUrl: baseUrl});
			
			oktaSignIn.renderEl(
			{ el: '#okta-login-container' },
			function (res) {
				if (res.status === 'SUCCESS') { res.session.setCookieAndRedirect('https://sophosqa.okta.com'); }
			}
			);